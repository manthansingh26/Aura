            "body": {
              "mode": "raw",
              "raw": "{\n  \"name\": \"Alex Rivera\",\n  \"email\": \"alex.rivera@university.edu\",\n  \"major\": \"Computer Science\",\n  \"year\": \"Senior\"\n}"
